	private void StartButtonActionPerformed(java.awt.event.ActionEvent evt) {// GEN-FIRST:event_StartButtonActionPerformed
		try {
			OutputController.setOutput(m_epLog);
			m_observerList = new ArrayList<ObserverThread>();
			m_observerList.add(new ObserverThread(0, 50));
			m_observerList.add(new ObserverThread(1, 50));
			m_observerList.get(0).start();
			m_observerList.get(1).start();
			GamepadManager.getInstance().observeGamepad(0,
					m_observerList.get(0));
			GamepadManager.getInstance().observeGamepad(1,
					m_observerList.get(1));
			GamepadManager.getInstance().start();
			StopButton.setEnabled(true);
			StartButton.setEnabled(false);
		} catch (IOException | AWTException ex) {
//			StopButton.setEnabled(false);
//			StartButton.setEnabled(true);
			Logger.getLogger(AndroServer.class.getName()).log(Level.SEVERE,
					null, ex);
		}
	}// GEN-LAST:event_StartButtonActionPerformed

	private void StopButtonActionPerformed(java.awt.event.ActionEvent evt) {// GEN-FIRST:event_StopButtonActionPerformed
		try {
			GamepadManager.getInstance().stop();
			for (ObserverThread obs : m_observerList) {
				obs.setRun(false);
				m_observerList.remove(obs);
			}
			StartButton.setEnabled(true);
			StopButton.setEnabled(false);
		} catch (IOException ex) {
			Logger.getLogger(ServerWindow.class.getName()).log(Level.SEVERE,
					null, ex);
		}
	}// GEN-LAST:event_StopButtonActionPerformed

